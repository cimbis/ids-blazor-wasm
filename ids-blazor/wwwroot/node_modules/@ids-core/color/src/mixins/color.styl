IDS_COLOR_GetCorrectContrastColor($color, $ratio = 5)
    $contrastRatioLight = contrast($color-text-lightest-beige, $color).ratio
    $contrastRatioDark = contrast($color-text-brown, $color).ratio
    if($contrastRatioLight > $ratio) {
        color $color-text-lightest-beige
    }
    else if($contrastRatioDark > $ratio){
        color $color-text-brown
    }
    else {
        color $color-text-lightest-beige
    }


IDS_COLOR_GenerateBackgroundColors($colors)
    for $name, $color in $colors
        .if.color.background.{$name}
            IDS_COLOR_GetCorrectContrastColor($color)
            background-color rgb($color)


