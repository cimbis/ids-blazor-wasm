{
  "name": "@ids-core/breakpoint",
  "version": "14.29.10",
  "description": "Breakpoints are points where the website content responds according to the device width, allowing you to show the best possible layout to the user.",
  "main": "./dist/breakpoint.css",
  "scripts": {
    "build": "rimraf ./dist ./*.zip && yarn run generate && gulp -L",
    "generate": "yarn run generate:variables && yarn run generate:token-documentation",
    "generate:variables": "node ./lib/generate-variables.js",
    "generate:token-documentation": "rimraf ./docs/components/breakpoint/tokens.md && node ./lib/generate-token-documentation.js",
    "build:prod": "yarn run generate && rimraf ./dist ./*.zip && gulp build:prod -L",
    "build:ci": "yarn run generate && rimraf ./dist ./*.zip && gulp build:prod -L",
    "test:prettify": "prettier --config .prettierrc ./dist/**/*.min.css --write && prettier --config .prettierrc ./dist/*.min.css --write",
    "test": "gulp pretest -L && yarn run test:prettify && yarn run mocha test/diff.js"
  },
  "author": {
    "name": "If P&C Insurance"
  },
  "files": [
    "CHANGELOG.md",
    "/dist",
    "!/dist/*.zip",
    "/docs",
    "/demo",
