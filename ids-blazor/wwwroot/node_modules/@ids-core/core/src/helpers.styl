.if.layout-helper
    position relative

.if.layout-helper::before
    position absolute
    top 0
    right 0
    bottom 20px
    left 0
    margin-right auto
    margin-left auto
    width 100%
    content ''
    background-size 100% 100%
    z-index 1000
    pointer-events none
    background-image repeating-linear-gradient(
        to right,
        rgba($color-infographic-light-green, 0.5) 0,
        rgba($color-infographic-light-green, 0.5) var(--if-layout-helper-column-width),
        rgba($color-status-red, 0.3) var(--if-layout-helper-column-width),
        rgba($color-status-red, 0.3) calc(var(--if-layout-helper-column-width) + var(--if-layout-helper-gutter-width))
    )

// @stylint ignore

.if.fluid.layout-helper::before
    background-image repeating-linear-gradient(
        to right,
        rgba($color-infographic-light-green, 0.5) 0,
        rgba($color-infographic-light-green, 0.5) var(--if-layout-helper-fluid-column-width),
        rgba($color-status-red, 0.3) var(--if-layout-helper-fluid-column-width),
        rgba($color-status-red, 0.3) calc(var(--if-layout-helper-fluid-column-width) + var(--if-layout-helper-fluid-gutter-width))
    )

// @stylint ignore

.if.wide.layout-helper::before
    background-image repeating-linear-gradient(
        to right,
        rgba($color-infographic-light-green, 0.5) 0,
        rgba($color-infographic-light-green, 0.5) var(--if-layout-helper-wide-column-width),
        rgba($color-status-red, 0.3) var(--if-layout-helper-wide-column-width),
        rgba($color-status-red, 0.3) calc(var(--if-layout-helper-wide-column-width) + var(--if-layout-helper-wide-gutter-width))
    )

// @stylint ignore

.if.across.layout-helper::before
    background-image repeating-linear-gradient(
        to right,
        rgba($color-infographic-light-green, 0.5) 0,
        rgba($color-infographic-light-green, 0.5) var(--if-layout-helper-across-column-width),
        rgba($color-status-red, 0.3) var(--if-layout-helper-across-column-width),
        rgba($color-status-red, 0.3) calc(var(--if-layout-helper-across-column-width) + var(--if-layout-helper-across-gutter-width))
    )

// @stylint ignore

.if.grid.helper [class*="col"],
.if.grid.helper .if.col
    margin-bottom 1.25rem
    min-height 60px
    display flex
    align-items center
    justify-content center
    text-overflow ellipsis
    overflow hidden
    transition none !important

.if.grid.helper [class*="col"],
.if.grid.helper .if.col
    border 1px solid rgba(37, 116, 168, .4)
    background-color rgba(37, 116, 168, .1)

.if.baseline-grid
    z-index 1

.if.baseline-grid::after,
.if.baseline-grid::before
    position absolute
    width auto
    height auto
    content ''
    display block !important
    pointer-events none
    z-index -1
    top 0
    right 0
    bottom 0
    left 0
    background-position top left

.if.baseline-grid::after,
.if.baseline-grid.eight::after
    background-size $size-8 $size-8
    background-image linear-gradient(to bottom, #d4397a 0px, transparent 1px, transparent 100%), linear-gradient(to right, #d4397a 0px, transparent 1px, transparent 100%)

// @stylint ignore

.if.baseline-grid.horizontal::after,
.if.baseline-grid.eight.horizontal::after
    background-size $size-8 $size-8
    background-image linear-gradient(180deg, #d4397a 0, transparent 1px, transparent)

// @stylint ignore

.if.baseline-grid.horizontal::before,
.if.baseline-grid.eight.horizontal::before
    content none

.if.baseline-grid::before,
.if.baseline-grid.eight::before
    background-size $size-4 $size-4
    background-image linear-gradient(to bottom, rgba(160, 160, 160, 0.3) 0px, transparent 1px, transparent 100%), linear-gradient(to right, rgba(160, 160, 160, 0.3) 0px, transparent 1px, transparent 100%)

// @stylint ignore

.if.baseline-grid.four::after
    background-size $size-4 $size-4
    background-image linear-gradient(to bottom, #d4397a 0px, transparent 1px, transparent 100%), linear-gradient(to right, #d4397a 0px, transparent 1px, transparent 100%)

// @stylint ignore

.if.baseline-grid.four::before
    content none

.if.baseline-grid.overlay::after,
.if.baseline-grid.overlay::before
    z-index 99999


