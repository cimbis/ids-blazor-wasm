fieldset.if
    border none

legend.if
    margin-bottom $size-spacing-4
    font-weight normal
    font-variation-settings "wght" $font-weight-126

// @stylint ignore

.if.form-grid
    width 100%
    display flex
    flex-wrap wrap

    & > *
        width 100%
        +IDS_BREAKPOINT_MQ_Medium_Min()
            width auto

    &.three
        +IDS_BREAKPOINT_MQ_Medium_Min()
            grid-template-columns repeat(auto-fit, minmax(33%, 1fr))

    +IDS_BREAKPOINT_MQ_Medium_Min()
        display grid
        flex-wrap nowrap
