@require '@ids-core/utils/src/variables/stylus/variables.styl'
@require '@ids-core/utils/src/variables/css/variables.css'
@require '@ids-core/color/src/variables/stylus/variables.styl'
@require '@ids-core/color/src/variables/css/variables.css'
@require '@ids-core/utils/src/mixins/utils.styl'
@require '@ids-core/breakpoint/src/variables/stylus/variables.styl'
@require '@ids-core/breakpoint/src/variables/css/variables.css'
@require '@ids-core/breakpoint/src/mixins/breakpoint.styl'

@require './variables/css/variables.css'

.if.section,
.if.section::after,
.if.section::before
    IDS_UTIL_Reset()

.if.section
    padding var(--ids-section-padding-media-query-base)
    width 100%
    position relative
    background-color var(--ids-section-background-color-light)
    +IDS_BREAKPOINT_MQ_ExtraSmall_Min()
        padding var(--ids-section-padding-media-query-xs)
    +IDS_BREAKPOINT_MQ_Medium_Min()
        padding var(--ids-section-padding-media-query-md)


.if.section.blog,
.if.section.medium,
.if.section.poc
    background-color var(--ids-section-background-color-medium)


.if.section.dark
    background-color var(--ids-section-background-color-dark)


.if.section.darker
    background-color var(--ids-section-background-color-darker)


.if.section,
.if.section.light
    background-color var(--ids-section-background-color-light)


.if.section:not(.dark):not(.darker):not(.poc):not(.blog):not(.medium)
    & + .if.section:not(.dark):not(.darker):not(.poc):not(.blog):not(.medium)
        padding-top 0


.if.section.light
    & + .if.section.light
        padding-top 0


.if.section.light
    & + .if.section:not(.dark):not(.darker):not(.poc):not(.blog):not(.medium)
        padding-top 0


.if.section:not(.dark):not(.darker):not(.poc):not(.blog):not(.medium)
    & + .if.section.light
        padding-top 0


.if.section.dark
    & + .if.section.dark
        padding-top 0


.if.section.darker
    & + .if.section.darker
        padding-top 0


.if.section.blog
    & + .if.section.blog
        padding-top 0


.if.section.poc
    & + .if.section.poc
        padding-top 0
