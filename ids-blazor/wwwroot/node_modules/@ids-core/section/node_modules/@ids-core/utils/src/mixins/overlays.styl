
IDS_UTIL_Overlays_Backdrop()
  transition all 0.3s ease-in
  display block
  position fixed
  z-index $depth-z-index-overlay
  opacity 0
  top 0
  left 0
  right 0
  bottom 0
  pointer-events none
  background-color rgba($color-text-light-brown, $depth-opacity-backdrop)

IDS_UTIL_Overlays_Backdrop_isOpen()
  pointer-events initial
  animation ifKeyframesShowBackdrop 0.2s ease-in forwards
