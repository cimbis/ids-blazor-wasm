{
  "name": "@ids-core/color",
  "version": "14.8.6",
  "description": "The If color palette reflects the tonality of the brand: uncomplicated, warm and personal. It fulfills specific functions and manages content effectively.",
  "main": "./dist/color.css",
  "scripts": {
    "build": "rimraf ./dist ./*.zip && npm run generate && gulp -L",
    "generate": "npm run generate:variables && npm run generate:palette-documentation && npm run generate:token-documentation",
    "generate:variables": "node ./lib/generate-variables.js",
    "generate:palette-documentation": "rimraf ./docs/design/foundation/color/palette.md && node ./lib/generate-palette-documentation.js",
    "generate:token-documentation": "rimraf ./docs/components/color/tokens.md && node ./lib/generate-token-documentation.js",
    "build:prod": "npm run generate && npm test && rimraf ./dist ./*.zip && gulp build:prod -L",
    "build:ci": "npm run generate && rimraf ./dist ./*.zip && gulp build:prod -L",
    "test:prettify": "prettier --config .prettierrc ./dist/**/*.min.css --write && prettier --config .prettierrc ./dist/*.min.css --write",
    "test": "gulp pretest -L && npm run test:prettify && mocha test/diff.js"
  },
  "author": {
    "name": "If P&C Insurance"
  },
