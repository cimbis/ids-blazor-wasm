
.if.text:not(.layout)
    &.left
        text-align left

    &.center
        text-align center

    &.right
        text-align right

    &.bold
        IDS_TYPOGRAPHY_FontFamily_SansBold()


.if.text.lead
    IDS_TYPOGRAPHY_Text_Lead()

.if.text.meta
    IDS_TYPOGRAPHY_Text_Meta()

.if.text.disclaimer
    IDS_TYPOGRAPHY_Text_Disclaimer()

    & a,
    & a:visited,
    & a:active
        color var(--ids-color-text-subtle)
        text-decoration underline

        &::after,
        &::before
            content none

        &:hover,
        &.is-hovered
            color var(--ids-color-text-primary-on-light)

            &::after,
            &::before
                content none

.if.text.body
    IDS_TYPOGRAPHY_Text_Body()

p.if.text.body
    margin-bottom $size-spacing-16
    +IDS_BREAKPOINT_MQ_Small_Min()
        margin-bottom $size-spacing-32

.if.text.caption,
figcaption.if
    IDS_TYPOGRAPHY_Text_Caption()
