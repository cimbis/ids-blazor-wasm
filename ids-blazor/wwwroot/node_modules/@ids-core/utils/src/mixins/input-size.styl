IDS_UTIL_Input_Data_Sizes($size) {
    if $size is largest {
        width 100%
        +IDS_BREAKPOINT_MQ_Smaller_Min() {
            width var(--if-layout-column-width-9)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-8)
        }
    }
    else if $size is larger {
        width 100%
        +IDS_BREAKPOINT_MQ_ExtraSmall_Min() {
            width var(--if-layout-column-width-8)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-7)
        }
    }
    else if $size is large {
        width 100%
        +IDS_BREAKPOINT_MQ_ExtraSmall_Min() {
            width var(--if-layout-column-width-7)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-6)
        }
    }
    else if $size is medium {
        width 100%
        +IDS_BREAKPOINT_MQ_ExtraSmall_Min() {
            width var(--if-layout-column-width-6)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-5)
        }
    }
    else if $size is small {
        width var(--if-layout-column-width-6)
        +IDS_BREAKPOINT_MQ_ExtraSmall_Min() {
            width var(--if-layout-column-width-5)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-4)
        }
    }
    else if $size is smaller {
        width var(--if-layout-column-width-6)
        +IDS_BREAKPOINT_MQ_ExtraSmall_Min() {
            width var(--if-layout-column-width-4)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-3)
        }
    }
    else if $size is smallest {
        width var(--if-layout-column-width-6)
        +IDS_BREAKPOINT_MQ_ExtraSmall_Min() {
            width var(--if-layout-column-width-3)
        }
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width var(--if-layout-column-width-2)
        }
    }
    else {
        width 100%
        +IDS_BREAKPOINT_MQ_Medium_Min() {
            width 296px
        }
    }

}

IDS_UTIL_Input_Label_Data_Sizes() {
    width 100%
    min-width var(--if-layout-column-width-4)

}


IDS_UTIL_Help_Error_Data_Sizes()
    & ~ .if.input-error,
    & ~ .if.input-help
        width 100%
        min-width var(--if-layout-column-width-4)
