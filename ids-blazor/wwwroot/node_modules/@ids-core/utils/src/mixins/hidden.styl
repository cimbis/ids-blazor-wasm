IDS_UTIL_GenerateHidden($break, $direction)
    .if.u-hidden-{$direction}--{$break}
        display none !important

IDS_UTIL_GenerateHide()
    for $break, $value in $breakpoint
        +IDS_BREAKPOINT_MQUp($break)
            IDS_UTIL_GenerateHidden($break, up)
        +IDS_BREAKPOINT_MQDown($break)
            IDS_UTIL_GenerateHidden($break, down)
